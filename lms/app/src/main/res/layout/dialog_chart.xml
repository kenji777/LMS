<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_chart_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검사 데이터 차트"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumsquarer" />

        <TextView
            android:id="@+id/btn_chart_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/close_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nanumsquarer"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- 차트 -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:backgroundTint="@color/grey_05"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey_05" />

