<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 액티비티 전환 애니메이션 제거 (테마 레벨 백업) -->
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <!-- 전환 애니메이션을 전부 0으로 설정 -->
    <style name="WindowAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/none</item>
        <item name="android:activityOpenExitAnimation">@anim/none</item>
        <item name="android:activityCloseEnterAnimation">@anim/none</item>
        <item name="android:activityCloseExitAnimation">@anim/none</item>
        <item name="android:taskOpenEnterAnimation">@anim/none</item>
        <item name="android:taskOpenExitAnimation">@anim/none</item>
        <item name="android:taskCloseEnterAnimation">@anim/none</item>
        <item name="android:taskCloseExitAnimation">@anim/none</item>
        <item name="android:taskToFrontEnterAnimation">@anim/none</item>
        <item name="android:taskToFrontExitAnimation">@anim/none</item>
        <item name="android:taskToBackEnterAnimation">@anim/none</item>
        <item name="android:taskToBackExitAnimation">@anim/none</item>
    </style>

</resources>
